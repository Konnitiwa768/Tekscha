{
  "format_version": "1.10.0",
  "minecraft:attachable": {
    "description": {
      "identifier": "jl_spears:diamond_spear",
      "materials": {
        "default": "entity_alphatest",
        "enchanted": "entity_alphatest_glint"
      },
      "textures": {
        "default": "textures/jl/som/items/diamond_spear_in_hand",
        "enchanted": "textures/misc/enchanted_item_glint"
      },
      "geometry": {
        "default": "geometry.jl_spears.spear"
      },
      "animations": {
        "wield_first_person": "animation.jl_spears.spear.wield_first_person",
        "wield_third_person": "animation.jl_spears.spear.wield_third_person",
        "jab_attack_first_person": "animation.jl_spears.spear.jab_attack_first_person",
        "charge_attack_first_person": "animation.jl_spears.spear.charge_attack_first_person",
        "charge_attack_third_person": "animation.jl_spears.spear.charge_attack_third_person"
      },
      "scripts": {
        "initialize": [
          "v.spear_max_charge_time = 10.5;"
        ],
        "pre_animation": [
          "v.spear_jab_attack_time = q.is_using_item ? 1 : 1 - (q.cooldown_time_remaining('jl_spears:spear') / q.cooldown_time('slot.weapon.mainhand'));",
          "v.spear_charge_time = q.is_using_item ? 1 - (q.cooldown_time_remaining('jl_spears:spear_charge') / v.spear_max_charge_time);"
        ],
        "animate": [
          { "wield_first_person": "c.is_first_person" },
          { "wield_third_person": "!c.is_first_person" },
          { "jab_attack_first_person": "c.is_first_person" },
          { "charge_attack_first_person": "c.is_first_person" },
          { "charge_attack_third_person": "!c.is_first_person" }
        ]
      },
      "render_controllers": [ "controller.render.item_default" ]
    }
  }
}